#compdef showmarks
#autoload

bookmarks=(
	`
	grep "|" $BOOKMARKS_FILE | while read line; do
		bookmark_name=$(echo "$line" | awk -F "|" '{print $2}')
		bookmark_path=$(echo "$line" | awk -F "|" '{print $1}')
		eval "echo \"${bookmark_name}:${bookmark_path}\""
	done
	`
)
_describe -t commands 'Bookmarks' bookmarks
